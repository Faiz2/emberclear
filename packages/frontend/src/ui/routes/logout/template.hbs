<section class='
  is-fullheight
  has-background-danger has-text-white
  centered-content align-items-start-mobile align-items-center-tablet'
>

  <div class='w-100 p-md-mobile p-xl-tablet'>
    <h1 class='title has-text-white p-b-lg p-t-lg-mobile p-t-lg-none-tablet'>
      {{t 'ui.logout.title'}}
    </h1>

    <h2 class='subtitle has-text-white'>
      {{t 'ui.logout.warning'}}

      {{#link-to 'settings' class='underline has-text-white'}}
        {{t 'ui.logout.theSettingsPage'}}
      {{/link-to}}
    </h2>

    <div class='flex justify-content-end'>
      <a class='button' {{action logout}}>
        <span class='icon'>{{fa-icon 'sign-out-alt' prefix='fas'}}</span>
        <span>{{t 'ui.logout.confirm'}}</span>
      </a>
    </div>
  </div>
</section>
