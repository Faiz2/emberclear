<KeyboardPress @key="ctrl+Space" @onDown={{action this.toggleSidebar}} />

<div data-test-offcanvas-wrapper class='is-flex-desktop flex-grow m-none m-b-none no-overflow'>
  {{#if this.isLoggedIn}}
    <div
      data-test-sidebar-container
      class='
      sidebar-container flex-row transition-all is-fullheight
      align-items-stretch
      {{if this.sidebar.isShown
        "is-sidebar-visible"
        "is-sidebar-hidden"}}'>

      <div class='sidebar-buttons'>
        <HamburgerButton
          @class='
            is-hidden-mobile
            is-flex-desktop'
          @onClick={{action this.toggleSidebar}}
          @isActive={{sidebar.isShown}} />
      </div>

      <div class='no-select sidebar-underlay full-overlay' {{action this.toggleSidebar}}></div>
      <Sidebar class='sidebar-wrapper' @contacts={{@contacts}} @channels={{@channels}} />

      <HamburgerButton
        @class='offcanvas-trigger is-flex-tablet-only'
        @onClick={{action this.toggleSidebar}}
        @isActive={{this.sidebar.isShown}} />
    </div>
  {{/if}}


  <div
    data-scroll-container
    class='
      flex-column flex-grow
      is-fullheight overflows
      {{if sidebar.isShown
        "is-sidebar-visible"
        "is-sidebar-hidden"}}'>

    {{yield}}

  </div>
</div>
