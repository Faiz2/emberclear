<form
  class='chat-entry flex-row field has-addons flex-grow m-b-sm'
  {{action this.sendMessage on="submit"}}
  >
  <div class='control flex'>
    <EmbedsMenu @sendTo={{@to}} />
  </div>

  <div class='control flex-grow resizable-textarea'>
    {{textarea
      autofocus
      role='chat-entry'
      class='input transition-all chat-entry'
      value=this.text
      placeholder=this.placeholder
    }}
    <div class='textarea-size'></div>
  </div>

  <div class='control flex-column'>
    <input class='button flex-grow' type='submit' value='Send' {{action this.sendMessage}} />
  </div>
</form>
