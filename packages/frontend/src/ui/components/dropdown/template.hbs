<div class="dropdown-trigger">
  <a class="button {{@buttonClass}}" {{action this.toggleMenu}}>
    {{#if this.hasButtonText}}
      <span>{{@buttonText}}</span>
    {{/if}}

    {{#if this.hasButtonIcon}}
      <span class="icon is-small">
        {{fa-icon @buttonIcon}}
      </span>
    {{/if}}
  </a>
</div>

{{#if this.isOpen}}
  <div class='no-select full-overlay invisible' {{action this.toggleMenu}} ></div>
{{/if}}

<div class="dropdown-menu">
  <div class="dropdown-content">
    {{yield (action this.closeMenu)}}
  </div>
</div>
